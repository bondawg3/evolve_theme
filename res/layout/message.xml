<!-- this is the default message layout, this will work fine for some themes, but others you will want to change positioning around -->
<!-- or the padding on each item, ect. Just remember not to change any of the id's or remove any of the items or your theme will not work at all -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- My Picture in the Conversation w/Image Border
    Modificaton | Changed original alignment from bottom of the message bubble to the top.
    Original | android:layout_alignParentBottom="true"
    -->

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/myPicture"
            android:scaleType="centerCrop"
            android:maxHeight="48dp"
            android:maxWidth="48dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="-10dp"
        android:padding="3dp"
        android:background="@drawable/contact_image_border" />


    <!-- Sets the distance between message bubbles
    Added | android:layout_alignParentTop="true"
    Modified | android:layout_marginBottom="20dp"
    -->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/myPicture"
            android:layout_marginBottom="20dp"
            android:id="@+id/holder">

        <!-- test comment -->

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/contactPicture"
                android:scaleType="centerCrop"
                android:maxHeight="48dp"
                android:maxWidth="48dp"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:layout_marginRight="-11dp"/>

        <!-- test comment -->

        <LinearLayout
                android:id="@+id/background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <!-- Display of Name in MMS Message -->

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/dateColorReceived"
                    android:background="#5aff990a"
                    android:layout_marginTop="-3dp"
                    android:paddingBottom="3dp"/>

            <!-- Display of MMS Image -->

            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/media"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:scaleType="centerInside"
                    android:background="#5af5ff3e"/>

            <!-- test comment -->

            <View    android:id="@+id/gifView"
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                     android:padding="10dp"
                     android:visibility="gone" />

            <!-- body of just the text of the message
                 does not include the whole message bubble -->

            <TextView
                    android:id="@+id/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="14sp"
                    android:fadingEdge="horizontal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/textColorReceived"
                    android:layout_marginTop="-3dp"/>

            <!-- Display of Date -->

            <TextView
                    android:id="@+id/date"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/dateColorReceived"
                    android:layout_marginBottom="-3dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>